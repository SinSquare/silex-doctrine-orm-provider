<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__.'/src/')
    ->in(__DIR__.'/tests/')
    ->name('*.php')
;

return PhpCsFixer\Config::create()
    ->setRules(array(
        '@Symfony' => true,
        'ordered_imports' => true,
        'indentation_type' => true
    ))
    ->setIndent("    ")
    ->setLineEnding("\n")
    ->setFinder($finder)
;